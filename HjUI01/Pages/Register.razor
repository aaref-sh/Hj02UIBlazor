@page "/Register"

<PageTitle>تسجيل حساب</PageTitle>



<div class="post-container m-auto w-5/6 md:w-[500px]">
    <button on:click class="btn-std flex justify-center items-center mb-4" >
        <i class="ph-right"></i>
        رجوع
    </button>
    @if (message != "")
    {
        <Note status=@status text=@message/>
    }
    <div class="std-border">
        <div class="post-header py-4 px-8 bg-graded">
            <h2 class="post-title text-center ">
                تسجيل حساب
            </h2>
            
        </div>
        
        <hr class="sapcer w-5/6 m-auto"/>
        <div class="post-body text-lg text-gray-700/[.95] py-4 px-10 sm:px-14 flex flex-col">
            <input @bind="@FirstName" placeholder="الاسم" required type="text" class=" std-textbox mt-4 m-auto" />
            @if(errors[0] != "") { <div class="text-red-600 text-xs"> * @errors[0] </div> }
            
            <input @bind="@LastName" placeholder="الكنية" required type="text" class=" std-textbox  mt-4 m-auto" />
            @if(errors[1] != "") { <div class="text-red-600 text-xs"> * @errors[1] </div> }
            
            
            <input @bind="@PhoneNumber" placeholder="رقم الهاتف" required type="tel" class=" std-textbox mt-4 m-auto" />
            @if(errors[2] != "") { <div class="text-red-600 text-xs"> * @errors[2] </div> }
            
            
            <input @bind="@Password" placeholder="كلمة المرور" required type="password" class=" std-textbox mt-4 m-auto" />
            @if(errors[3] != "") { <div class="text-red-600 text-xs"> * @errors[3] </div> }
            
            
            <input @bind="@ConfirmPassword" placeholder="تأكيد كلمة المرور" required type="password" class=" std-textbox mt-4 m-auto" />
            @if(errors[4] != "") { <div class="text-red-600 text-xs"> * @errors[4] </div> }
            
            

            <button @onclick=@register class="btn-std m-auto mt-3">تسجيل</button>
        </div>
    </div>
</div>
